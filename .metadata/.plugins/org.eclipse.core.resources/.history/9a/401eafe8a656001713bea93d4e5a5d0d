	<input type="button" id="button2" value="Vergoeding berekenen">
	<table id="myTable">
	<thead>
		<tr>
			<th>Voornaam</th>
			<th>Achternaam</th>
			<th>Afdeling</th>
			<th>Niveau</th>
			<th>Type</th>
			<th>Vergoeding</th>
		</tr>
		</thead>
	</table>
	<script src="https://code.jquery.com/jquery-3.2.0.min.js"></script>
	<script>
		$("#button").click(
				function() {
					$('#myTable tbody').remove();
					$("table").append("<tbody>");
				    var data = { "afdeling": $("#Afdeling").val(), "type": $("#Type").val(), 
				    		"niveau": $("#Niveau").val(), "begindatum": $("#Begindatum").val(), "einddatum": $("#Einddatum").val() }
				    var JSONdata = JSON.stringify(data);
				    
				    $.post("restservices/AfgerondeStages/Sturen", JSONdata, function(data) {
				    	$.each(data, function(i, data) {
							$("table").append(
									"<tr><td>" + data.voornaam
											+ "</td><td>"
											+ data.achternaam
											+ "</td><td>" + data.naam
											+ "</td><td>" + data.niveau
											+ "</td><td>" + data.type
											+ "</td></tr>");
						});
				    }); 
				    $("table").append("</tbody>");

				});
		

		$("#button2").click(
				function() {
					$('#myTable tbody').remove();
					$("table").append("<tbody>");
					var data = { "afdeling": $("#Afdeling").val(), "type": $("#Type").val(), 
				    		"niveau": $("#Niveau").val(), "begindatum": $("#Begindatum").val(), "einddatum": $("#Einddatum").val() }
				    var JSONdata = JSON.stringify(data);
				    
					var vergoeding = 100; 
					var niveau = document.getElementById("Niveau").value;
					var type = document.getElementById("Type").value;
					var afdeling = document.getElementById("Afdeling").value;
					
					if (nivaeu == "HBO") {
						vergoeding = vergoeding * 1.5;
					} else if (niveau == "WO") {
						vergoeding = vergoeding * 2;
					}
					
					if (type == "Afstudeerstage") {
						vergoeding = vergoeding * 1.5;
					}
					
					if (afdeling == "Diergeneeskunde") {
						vergoeding = vergoeding * 1.5;
					}
					
					
					
				    $.post("restservices/AfgerondeStages/Sturen", JSONdata, function(data) {
				    	$.each(data, function(i, data) {
							$("table").append(
									"<tr><td>" + data.voornaam
											+ "</td><td>"
											+ data.achternaam
											+ "</td><td>" + data.naam
											+ "</td><td>" + data.niveau
											+ "</td><td>" + data.type
											+ "</td><td>" + vergoeding + "</td></tr>");
						});
				    }); 
				    $("table").append("</tbody>");

				});
		

	</script>
