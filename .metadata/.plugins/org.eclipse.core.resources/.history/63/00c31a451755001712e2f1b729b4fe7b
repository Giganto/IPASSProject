<script src="https://code.jquery.com/jquery-3.2.0.min.js"></script>
<script>

	$("#button").click( function() {
		if ($(Voornaam).val().length > 20 || $(Voornaam).val().length == 0) { window.alert("Voornaam is te lang. Maximaal 20 characters."); }
		else if ($(Achternaam).val().length > 20) { window.alert("Achternaam is te lang. Maximaal 20 characters."); }
		else if ($(Plaats).val().length > 20) { window.alert("Plaats is te lang. Maximaal 20 characters."); }
		else if ($(Adres).val().length > 20) { window.alert("Adres is te lang. Maximaal 20 characters."); }
		
		else {
		var form = document.getElementById('theForm');
		document.getElementById('theForm').submit();
		}
	});
</script>
